                        .setThumbnail(`${interaction.user.displayAvatarURL({ dynamic: true, format: "png", size: 4096 })}`)
                        .setDescription(`> **ğŸ‘‹ OlÃ¡ <@${interaction.user.id}>, boas vindas ao seu ticket.**\n`)
                        .addFields(
                            { name: `ğŸ“‹ Motivo`, value: `\`\`${title}\`\`` },
                            { name: 'ğŸ“­ DescriÃ§Ã£o', value: `\`\`${description}\`\`` }
                        )
                ],
                components: [new Discord.ActionRowBuilder()
                    .addComponents(
                        new Discord.ButtonBuilder()
                            .setCustomId("close_ticket")
                            .setEmoji("ğŸ”’")
                            .setLabel("Fechar")
                            .setStyle(4),
                        new Discord.ButtonBuilder()
                            .setCustomId("painel_member")
                            .setEmoji("ğŸ‘¨â€ğŸ’¼")
                            .setLabel("Painel membro")
                            .setStyle(3),
                        new Discord.ButtonBuilder()
                            .setCustomId("painel_staff")
                            .setEmoji("ğŸ’¼")
                            .setLabel("Painel staff")
                            .setStyle(1),
                        new Discord.ButtonBuilder()
                            .setCustomId("painel_sale")
                            .setEmoji("ğŸ›’")
                            .setLabel("Painel vendas")
                            .setStyle(2)
                    )
                ]
            })
        }

        if (interaction.isButton() && interaction.customId === "close_ticket") {
            const ticket = await db.get(`ticket_${interaction.channel.id}`);

            const user = await interaction.guild.members.cache.get(ticket.owner_id)

            if (interaction.user.id !== user.id && !interaction.member.roles.cache.get(config.ticket.support_role)) return interaction.reply({
                embeds: [
                    new Discord.EmbedBuilder()
                        .setColor(config.embeds_color.embed_error)
                        .setDescription(`âŒ | VocÃª nÃ£o tem permissÃ£o de utilizar esta opÃ§Ã£o!`)
                ],
                ephemeral: true
            })

            interaction.channel.edit({
                name: `closed-${interaction.user.username}`,
                permissionOverwrites: [
                    {
                        id: interaction.guild.id,
                        deny: ["ViewChannel"],
                    },
                    {
                        id: user.id,
                        deny: ["ViewChannel", "SendMessages", "AttachFiles", "AddReactions"],
                    },
                    {
                        id: config.ticket.support_role,
                        allow: ["ViewChannel", "SendMessages", "AttachFiles", "AddReactions"]
                    }
                ]
            })

            user.send({
                embeds: [
                    new Discord.EmbedBuilder()
                        .setColor(config.embeds_color.embed_invisible)
                        .setDescription(`> ğŸ”’ OlÃ¡ ${interaction.user}, seu ticket ${interaction.channel} foi fechado, caso tenha alguma dÃºvida entre em contato com a administraÃ§Ã£o!`)
                        .addFields(
                            { name: 'ğŸ“‹ Fechado por', value: `\`\`\`${interaction.user.tag}\`\`\`` },
                            { name: 'ğŸ“… Data de fechamento', value: `\`\`\`${moment().utc().tz('America/Sao_Paulo').format('DD/MM/Y - HH:mm:ss')}\`\`\`` }
                        )
                ]
            })

            interaction.update({
                embeds: [
                    new Discord.EmbedBuilder()
                        .setColor(config.embeds_color.embed_invisible)
                        .setDescription(`ğŸ”’ O ticket foi fechado por ${interaction.user}.`)
                ],
                components: [
                    new Discord.ActionRowBuilder()
                        .addComponents(
                            new Discord.ButtonBuilder()
                                .setCustomId("open_ticket")
                                .setEmoji("ğŸ”“")
                                .setLabel("Abrir")
                                .setStyle(4),
                            new Discord.ButtonBuilder()
                                .setCustomId("delete_ticket")
                                .setEmoji("ğŸ—‘ï¸")
                                .setLabel("Deletar")
                                .setStyle(4),
                            new Discord.ButtonBuilder()
                                .setCustomId("painel_member")
                                .setEmoji("ğŸ‘¨â€ğŸ’¼")
                                .setLabel("Painel membro")
                                .setStyle(3)
                                .setDisabled(true),
                            new Discord.ButtonBuilder()
                                .setCustomId("painel_staff")
                                .setEmoji("ğŸ’¼")
                                .setLabel("Painel staff")
                                .setStyle(1)
                                .setDisabled(true),
                            new Discord.ButtonBuilder()
                                .setCustomId("painel_sale")
                                .setEmoji("ğŸ›’")
                                .setLabel("Painel vendas")
                                .setStyle(2)
                                .setDisabled(true),
                        )
                ]
            })
        } else if (interaction.isButton() && interaction.customId === "open_ticket") {
            const ticket = await db.get(`ticket_${interaction.channel.id}`);

            const user = await interaction.guild.members.cache.get(ticket.owner_id)

            if (interaction.user.id !== user.id && !interaction.member.roles.cache.get(config.ticket.support_role)) return interaction.reply({
                embeds: [
                    new Discord.EmbedBuilder()
                        .setColor(config.embeds_color.embed_error)
                        .setDescription(`âŒ | VocÃª nÃ£o tem permissÃ£o de utilizar esta opÃ§Ã£o!`)
                ],
                ephemeral: true
            })

            interaction.channel.edit({
                name: `ğŸ«-${interaction.user.username}`,
                permissionOverwrites: [
                    {
                        id: interaction.guild.id,
                        deny: ["ViewChannel"],
                    },
                    {
                        id: user.id,
                        allow: ["ViewChannel", "SendMessages", "AttachFiles", "AddReactions"],
                    },
                    {
                        id: config.ticket.support_role,
                        allow: ["ViewChannel", "SendMessages", "AttachFiles", "AddReactions"]
                    }
                ]
            })

            user.send({
                embeds: [
                    new Discord.EmbedBuilder()
                        .setColor(config.embeds_color.embed_invisible)
                        .setDescription(`> ğŸ”“ OlÃ¡ ${interaction.user}, seu ticket ${interaction.channel} foi aberto, caso tenha alguma dÃºvida entre em contato com a administraÃ§Ã£o!`)
                        .addFields(
                            { name: 'ğŸ“‹ aberto por', value: `\`\`\`${interaction.user.tag}\`\`\`` },
                            { name: 'ğŸ“… Data de fechamento', value: `\`\`\`${moment().utc().tz('America/Sao_Paulo').format('DD/MM/Y - HH:mm:ss')}\`\`\`` }
                        )
                ]
            })

            interaction.update({
                embeds: [
                    new Discord.EmbedBuilder()
                        .setColor(config.embeds_color.embed_invisible)
                        .setDescription(`ğŸ”“ O ticket foi aberto por ${interaction.user}.`)
                ],
                components: [new Discord.ActionRowBuilder()
                    .addComponents(
                        new Discord.ButtonBuilder()
                            .setCustomId("close_ticket")
                            .setEmoji("ğŸ”’")
                            .setLabel("Fechar")
                            .setStyle(4),
                        new Discord.ButtonBuilder()
                            .setCustomId("painel_member")
                            .setEmoji("ğŸ‘¨â€ğŸ’¼")
                            .setLabel("Painel membro")
                            .setStyle(3),
                        new Discord.ButtonBuilder()
                            .setCustomId("painel_staff")
                            .setEmoji("ğŸ’¼")
                            .setLabel("Painel staff")
                            .setStyle(1),
                        new Discord.ButtonBuilder()
                            .setCustomId("painel_sale")
                            .setEmoji("ğŸ›’")
                            .setLabel("Painel vendas")
                            .setStyle(2)
                    )
                ]
            })
        } else if (interaction.isButton() && interaction.customId === "painel_member") {
            const ticket = await db.get(`ticket_${interaction.channel.id}`);

            const user = await interaction.guild.members.cache.get(ticket.owner_id)

            if (interaction.user.id !== user.id) return interaction.reply({
                embeds: [
                    new Discord.EmbedBuilder()
                        .setColor(config.embeds_color.embed_error)
                        .setDescription(`âŒ | VocÃª nÃ£o tem permissÃ£o para abrir estÃ¡ funÃ§Ã£o, somente o dono do ticket.`)
                ],
                ephemeral: true
            })

            interaction.reply({
                embeds: [
                    new Discord.EmbedBuilder()
                        .setColor(config.embeds_color.embed_invisible)
                        .setDescription(`âœ… | Painel membro aberto com sucesso, escolha uma das opÃ§Ãµes abaixo:`)
                ],
                components: [
                    new Discord.ActionRowBuilder()
                        .addComponents(
                            new Discord.StringSelectMenuBuilder()
                                .setCustomId('options_member')
                                .setPlaceholder('Escolha uma opÃ§Ã£o!')
                                .addOptions(
                                    { label: 'â• Criar call', value: `create_call` },
                                    { label: 'ğŸ—‘ï¸ Deletar call', value: `delete_call` },
                                    { label: 'ğŸ‘¤ Adicionar usuÃ¡rio', value: `add_user` },
                                    { label: 'ğŸ—‘ï¸ Remover usuÃ¡rio', value: `remove_user` },
                                    { label: 'ğŸ’¾ Salvar logs', value: `transcript` }
                                )
                        )
                ],
                ephemeral: true
            })
        } else if (interaction.isStringSelectMenu() && interaction.customId === "options_member") {
            const ticket = await db.get(`ticket_${interaction.channel.id}`);
            const user = await interaction.guild.members.cache.get(ticket.owner_id)

            const option = interaction.values[0];

            if (option === "create_call") {
                const channel_find = await interaction.guild.channels.cache.find(c => c.name === `ğŸ“-${interaction.user.username.toLowerCase().replace(/ /g, '-')}`)

                if (channel_find) return interaction.update({
                    embeds: [
                        new Discord.EmbedBuilder()
                            .setColor(config.embeds_color.embed_error)
                            .setDescription(`âŒ | VocÃª jÃ¡ possui uma call aberta em ${channel_find}`)
                    ],
                    components: [
                        new Discord.ActionRowBuilder()
                            .addComponents(
                                new Discord.ButtonBuilder()
                                    .setStyle(5)
                                    .setLabel('Entrar na call')
                                    .setURL(channel_find.url)
                            )
                    ],
                    ephemeral: true
                })

                const channel = await interaction.guild.channels.create({
                    name: `ğŸ“-${interaction.user.username.toLowerCase().replace(/ /g, '-')}`,
                    type: 2,
                    parent: config.ticket.category_call_id,
                    permissionOverwrites: [
                        {
                            id: interaction.guild.id,
                            deny: ["ViewChannel"],
                        },
                        {
                            id: interaction.user.id,
                            allow: ["Connect", "ViewChannel"],
                        },
                        {
                            id: config.ticket.support_role,
                            allow: ["Connect", "ViewChannel"],
                        },
                    ]
                })

                interaction.update({
                    embeds: [
                        new Discord.EmbedBuilder()
                            .setColor(config.embeds_color.embed_success)
                            .setDescription(`âœ… | Call criada com sucesso em ${channel}`)
                    ],
                    components: [
                        new Discord.ActionRowBuilder()
                            .addComponents(
                                new Discord.ButtonBuilder()
                                    .setStyle(5)
                                    .setLabel('Entrar na call')
                                    .setURL(channel.url)
                            )
                    ],
                    ephemeral: true,
                })
            } else if (option === "delete_call") {
                const channel_find = await interaction.guild.channels.cache.find(c => c.name === `ğŸ“-${interaction.user.username.toLowerCase().replace(/ /g, '-')}`)

                if (!channel_find) return interaction.update({
                    embeds: [
                        new Discord.EmbedBuilder()
                            .setColor(config.embeds_color.embed_error)
                            .setDescription(`âŒ | VocÃª nÃ£o nenhuma possui uma call aberta!`)
                    ],
                    components: [],
                    ephemeral: true
                })

                await channel_find.delete();

                interaction.update({
                    embeds: [
                        new Discord.EmbedBuilder()
                            .setColor(config.embeds_color.embed_success)
                            .setDescription(`âœ… | Call deletada com sucesso!`)
                    ],
                    components: [],
                    ephemeral: true
                })
            } else if (option === "add_user") {
                interaction.update({
                    embeds: [
                        new Discord.EmbedBuilder()
                            .setColor(config.embeds_color.embed_invisible)
                            .setDescription(`ğŸ‘¤ | Marce ou envie o ID do usuÃ¡rio que vocÃª deseja adicionar!`)
                    ],
                    components: [],
                    ephemeral: true
                })

                const filter = i => i.member.id === interaction.user.id;
                const collector = interaction.channel.createMessageCollector({ filter });

                collector.on('collect', async (collect) => {
